meta(charset="UTF-8")
meta(http-equiv="X-UA-Compatible" content="IE=edge")
meta(name="viewport" content="width=device-width, initial-scale=1.0")
meta(name="format-detection" content="telephone=no")
if pageTitle
  title #{pageTitle} | #{site.name}
else
  title #{site.name}
meta(name="description" content="official site with information, video clips, tour dates, and links.")
meta(name="keywords" content=pageKeywords)


//- OGP

meta(property="og:title" content=site.name)
meta(property="og:type" content="website")
meta(property="og:image" content=site.ogpImage)
meta(property="og:url" content=site.url)
meta(property="og:description" content=site.description)
meta(property="og:site_name" content=site.name)
meta(property="og:locale" content=pageLang)

//- OGP Facebook insights
meta(property="fb:admins" content="")
meta(property="fb:app_id" content="")
//- /OGP Facebook insights

//- OGP Twitter Cards
meta(name="twitter:card" content="summary_large_image")
meta(name="twitter:site" content="")
meta(name="twitter:title" content=pageTitle)
meta(name="twitter:image" content=site.ogpImage)
//- /OGP Twitter Cards

//- /OGP
